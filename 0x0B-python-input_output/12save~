#!/usr/bin/python3
"""you know what it is"""


lista_big = []
lista_1 = [1]
lista_2 = [1, 1]

def pascal_triangle(n):
    """return list with lists with values of pascal triangle"""
    if n <= 0:
        return lista_big

    if n == 1:
        lista_big.append(lista_1)
        return lista_big

    if n == 2:
        lista_big.append(lista_1)
        lista_big.append(lista_2)
        return lista_big

    lista_big.append(lista_1)
    lista_big.append(lista_2)

    lista_base = lista_2.copy()
    new_num = 0

    for i in range(2, n):
        index = 1
        limite = int((len(lista_base) + 2) / 2)
        for j in range(0, limite):
            new_num = lista_base[j] + lista_base[j + 1]
            lista_base.insert(index, new_num)
            index += 1
        index = -1

        for j in range(-1, (limite * -1)):
            lista_base.insert(index, lista_base[(index * -1) - 1])
            index -= 1

        lista_big.append(lista_base)

    return lista_big
